<%= link_to('Back to posts', "/posts") %></br>

<% if @post.nil? %>
	Nu exista postarea ceruta!
<%else %>
	<%= render @post %>
	<div class="card my-1" style="width: 25rem;">
	  <div class="card-body">
	    <p class="font-weight-bold">Add a comment</p>
	    <%= form_with(model: [@post, @post.comments.build]) do |f| %>
	      <div class="form-group">
	        <%= f.text_area :body, class: 'form-control' %>
	      </div>
	  </br>
	      <%= f.submit 'Submit', class: 'btn btn-primary' %>
	    <% end %>
	  </div>
	</div>
	<%= render @post.comments %>
<%end%>