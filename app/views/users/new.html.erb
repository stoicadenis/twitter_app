<% if flash[:success] %>
	<div class="alert alert-success"><%= flash[:success] %></div>
<% elsif flash[:error] %>
	<div class="alert alert-danger"><%= flash[:error] %></div>
<%end%>

<section class="ftco-section contact-section">
	<div class="container mt-1 row block-9">
		<div class="ftco-animate form-control">
			<%= form_for @user do |f| %>
		  	<div class="row g-1">
		  		<div class="form-group">
					<%= f.text_field :name, class: 'col-3', placeholder: 'Name' %>
					<%= f.text_field :email, class: 'col-5', placeholder: 'E-mail', html: {class:'col-sm-8'} %>
				</div>
			</div>
			<%= f.number_field :age, class: 'mt-1 col-3', placeholder: 'Age' %><br/>
			<%= f.text_field :gender, class: 'mt-1 col-3', placeholder: 'Gender' %><br/>
			<%= f.telephone_field :phone_number, class: 'mt-1 col-3', placeholder: 'Phone Number' %><br/>
		  	<%= f.submit({ class: 'mt-2 btn btn-primary' }) %>
		  
		<%end%>
		</div>
	</div>
</section>